{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./resources/js",
        "paths": {
            "@/*": ["*"]
        },
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "resources/js/**/*",
        "resources/js/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
